@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome";
}

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Estate Management and Administration</h1>
    <p class="lead">Manage your estate, merchants and transactions with ease.</p>
</div>

