    <div class="card text-center">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Estates</h4>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mt-3 mb-4">
                    <li>Manage estate details</li>
                    <li>Manage estate users</li>
                    <li>Operator Management</li>
                    <li>Contract Management</li>
                    <li>&nbsp;</li>
                </ul>
                <button type="button" class="btn btn-lg btn-block btn-primary">Learn More</button>
            </div>
        </div>
        <div class="card text-center">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">Merchants</h4>
        </div>
        <div class="card-body">
            <ul class="list-unstyled mt-3 mb-4">
                <li>Manage Merchant Details</li>
                <li>Merchant Configuration</li>
                <li>Balance Management</li>
                <li>Fee Management</li>
                <li>&nbsp;</li>
            </ul>
            <button type="button" class="btn btn-lg btn-block btn-primary">Learn More</button>
        </div>
        </div>
    <div class="card text-center">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">Transaction Processing</h4>
        </div>
        <div class="card-body">
                
            <ul class="list-unstyled mt-3 mb-4">
                <li>Transaction Enquiry</li>
                <li>Transaction Reports</li>
                <li>Settlement Processing</li>
                <li>Bulk Transaction Files</li>
                <li>&nbsp;</li>
            </ul>
            <button type="button" class="btn btn-lg btn-block btn-primary">Learn More</button>
        </div>
    </div>
</div>
