@using EstateManagementUI.BusinessLogic.PermissionService.Constants
@using Hydro.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ContractProductTransactionFeeList

    <div class="card o-hidden border-0 shadow-sm my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-9">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Transaction Fees for Product @Model.ContractProductName</h1>
                        </div>
                    <div>
                        @if (await Model.CanRenderButton(ApplicationSections.Contract, ContractFunctions.AddTransactionFee))
                        {
                            <button class="btn btn-primary" type="button" on:click="@(() => Model.NewContractProductTransactionFee())" id="newContractProductTransactionFeeButton">
                                New Transaction Fee
                            </button>
                        }
                    </div>
                        @if (Model.ContractProductTransactionFees.Any() == false)
                        {
                            <div class="bg-base-200 rounded text-center p-4">
                                <h6>No transaction fees to show</h6>
                            </div>
                        }
                        else
                        {
                            <partial name="ContractProductTransactionFeeList.Table.cshtml"/>
                        }
                    </div>
                </div>
                <div class="col-lg-3" align="center">
                    <img src="~/img/applicationimages/network-image.jpg" width="250px" height="250px"/>
                </div>
            </div>
        </div>
    </div>
