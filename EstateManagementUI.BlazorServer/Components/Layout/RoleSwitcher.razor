@rendermode InteractiveServer
@using EstateManagementUI.BlazorServer.Permissions
@inject IConfiguration Configuration
@inject NavigationManager NavigationManager
@inject IPermissionService PermissionService

@if (isTestMode)
{
    <div class="relative">
        <button type="button" @onclick="ToggleDropdown" @onclick:stopPropagation 
                class="flex items-center space-x-2 px-3 py-1.5 bg-yellow-100 text-yellow-800 rounded-md hover:bg-yellow-200 transition-colors text-sm">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="font-medium">@currentRole</span>
            <svg class="w-3 h-3 transition-transform @(isDropdownOpen ? "rotate-180" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
        </button>
        
        @if (isDropdownOpen)
        {
            <div class="absolute right-0 mt-2 w-56 bg-white rounded-md shadow-lg py-1 z-50 border border-gray-200" @onclick:stopPropagation>
                <div class="px-3 py-2 border-b border-gray-100">
                    <div class="text-xs font-semibold text-gray-500 uppercase">Test Mode - Switch Role</div>
                </div>
                
                @foreach (var role in availableRoles)
                {
                    <button @onclick="() => SwitchRole(role.Key)" 
                            class="w-full text-left px-3 py-2 text-sm hover:bg-gray-100 transition-colors @(currentRole == role.Key ? "bg-blue-50 text-blue-700 font-medium" : "text-gray-700")">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center space-x-2">
                                @if (currentRole == role.Key)
                                {
                                    <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                    </svg>
                                }
                                else
                                {
                                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                }
                                <span>@role.Key</span>
                            </div>
                        </div>
                        <div class="text-xs text-gray-500 ml-6 mt-0.5">@role.Value</div>
                    </button>
                }
            </div>
        }
    </div>
}

@code {
    private bool isTestMode;
    private string currentRole = "Administrator";
    private bool isDropdownOpen = false;
    
    private Dictionary<string, string> availableRoles = new()
    {
        { "Administrator", "Full access to all features" },
        { "Viewer", "Read-only access (no edit)" }
    };
    
    protected override async Task OnInitializedAsync()
    {
        isTestMode = Configuration.GetValue<bool>("AppSettings:TestMode", false);
        
        // Get the actual current role from authentication
        var actualRole = await PermissionService.GetUserRoleAsync();
        currentRole = actualRole ?? "Administrator";
    }
    
    protected override async Task OnParametersSetAsync()
    {
        // Update current role when parameters change (e.g., after navigation)
        if (isTestMode)
        {
            var actualRole = await PermissionService.GetUserRoleAsync();
            if (!string.IsNullOrEmpty(actualRole))
            {
                currentRole = actualRole;
            }
        }
    }
    
    private void ToggleDropdown()
    {
        isDropdownOpen = !isDropdownOpen;
    }
    
    private void SwitchRole(string role)
    {
        // Store the selected role in session storage or cookie for persistence
        // For now, we'll just reload with a query parameter
        var uri = new Uri(NavigationManager.Uri);
        var baseUri = $"{uri.Scheme}://{uri.Authority}{uri.AbsolutePath}";
        NavigationManager.NavigateTo($"{baseUri}?switchRole={role}", forceLoad: true);
        isDropdownOpen = false;
    }
}
