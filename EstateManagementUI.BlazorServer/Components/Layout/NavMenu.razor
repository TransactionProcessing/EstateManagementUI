@using EstateManagementUI.BlazorServer.Permissions
@inject IPermissionService PermissionService

<nav class="px-2 space-y-2">
    <NavLink id="dashboardLink" class="nav-menu-item group" href="" Match="NavLinkMatch.All">
        <span class="nav-menu-icon">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
        </span>
        <span class="nav-menu-text">Dashboard</span>
    </NavLink>

    <RequireSectionAccess Section="PermissionSection.Estate">
        <NavLink id="estateDetailsLink" class="nav-menu-item group" href="estate">
            <span class="nav-menu-icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
            </span>
            <span class="nav-menu-text">Estate Management</span>
        </NavLink>
    </RequireSectionAccess>

    <RequireSectionAccess Section="PermissionSection.Merchant">
        <NavLink id="merchantsLink" class="nav-menu-item group" href="merchants">
            <span class="nav-menu-icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                </svg>
            </span>
            <span class="nav-menu-text">Merchant Management</span>
        </NavLink>
    </RequireSectionAccess>

    <RequireSectionAccess Section="PermissionSection.Contract">
        <NavLink id="contractsLink" class="nav-menu-item group" href="contracts">
            <span class="nav-menu-icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
            </span>
            <span class="nav-menu-text">Contract Management</span>
        </NavLink>
    </RequireSectionAccess>

    <RequireSectionAccess Section="PermissionSection.Operator">
        <NavLink id="operatorsLink" class="nav-menu-item group" href="operators">
            <span class="nav-menu-icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                </svg>
            </span>
            <span class="nav-menu-text">Operator Management</span>
        </NavLink>
    </RequireSectionAccess>

    <RequireSectionAccess Section="PermissionSection.FileProcessing">
        <NavLink id="fileProcessingLink" class="nav-menu-item group" href="file-processing">
            <span class="nav-menu-icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
            </span>
            <span class="nav-menu-text">File Processing</span>
        </NavLink>
    </RequireSectionAccess>

    @if (isAdministrator)
    {
        <NavLink id="permissionsLink" class="nav-menu-item group" href="permissions">
            <span class="nav-menu-icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
            </span>
            <span class="nav-menu-text">Permissions</span>
        </NavLink>
    }
</nav>

@code {
    private bool collapseNavMenu = true;
    private bool isAdministrator = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override async Task OnInitializedAsync()
    {
        var role = await PermissionService.GetUserRoleAsync();
        isAdministrator = role != null && (role.Equals("Administrator", StringComparison.OrdinalIgnoreCase) || role.Equals("Estate", StringComparison.OrdinalIgnoreCase));
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
