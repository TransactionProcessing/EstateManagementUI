@page "/"
@using EstateManagementUI.BlazorServer.Common
@using EstateManagementUI.BlazorServer.UIServices
@rendermode InteractiveServer
@* @inject AuthenticationStateProvider AuthenticationStateProvider *@
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IPermissionService PermissionService
@inject ITransactionUIService TransactionUiService
@inject IMerchantUIService MerchantUiService
@inject ICalendarUIService CalendarUiService;
@inherits AuthorizedComponentBase

<PageTitle>Dashboard</PageTitle>

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
            <p class="text-gray-600 mt-1">Welcome to Estate Management System</p>
        </div>
        <div class="text-sm text-gray-500">
            <i class="bi bi-calendar"></i> @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
        </div>
    </div>

    @if (isAdministrator)
    {
        <!-- Administrator Welcome Message -->
        <div class="card">
            <div class="card-body text-center py-12">
                <svg class="w-20 h-20 mx-auto mb-4 text-admin-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                <h2 class="text-2xl font-bold text-gray-900 mb-2">Welcome, Administrator</h2>
                <p class="text-gray-600">You have administrative access to manage system permissions and settings.</p>
            </div>
        </div>
    }
    else if (isLoading)
    {
        <!-- Loading State -->
        <div class="flex justify-center items-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-admin-primary"></div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <!-- Error State -->
        <div class="card bg-red-50 border border-red-200">
            <div class="card-body">
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-red-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div>
                        <h3 class="text-red-800 font-semibold">Error Loading Dashboard</h3>
                        <p class="text-red-700 text-sm mt-1">@errorMessage</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- KPI Cards Row 1 - Merchant Activity -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <!-- Merchants with sales in last hour -->
            <div class="info-box">
                <div class="info-box-icon bg-admin-success">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div class="info-box-content">
                    <span class="info-box-text">Merchants with Sales (Last Hour)</span>
                    <span class="info-box-number">@(merchantKpi?.MerchantsWithSaleInLastHour ?? 0)</span>
                </div>
            </div>

            <!-- Merchants with no sales today -->
            <div class="info-box">
                <div class="info-box-icon bg-admin-warning">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                </div>
                <div class="info-box-content">
                    <span class="info-box-text">Merchants with No Sales Today</span>
                    <span class="info-box-number">@(merchantKpi?.MerchantsWithNoSaleToday ?? 0)</span>
                </div>
            </div>

            <!-- Merchants with no sales in last 7 days -->
            <div class="info-box">
                <div class="info-box-icon bg-admin-danger">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </div>
                <div class="info-box-content">
                    <span class="info-box-text">Merchants with No Sales (7 Days)</span>
                    <span class="info-box-number">@(merchantKpi?.MerchantsWithNoSaleInLast7Days ?? 0)</span>
                </div>
            </div>
        </div>

        <!-- Comparison Date Selection (moved here) -->
        <div class="flex items-center gap-4 bg-white p-4 rounded-lg shadow-admin">
            <label class="text-sm font-medium text-gray-700">Compare to:</label>
            <InputSelect @bind-Value="_selectedComparisonDate" @bind-Value:after="OnComparisonDateChanged" class="form-control max-w-xs" id="comparisonDateSelector">
                @if (comparisonDates != null)
                {
                    @foreach (var date in comparisonDates)
                    {
                        <option value="@date.Date.ToString("yyyy-MM-dd")">@date.Description</option>
                    }
                }
            </InputSelect>
            <span class="text-xs text-gray-500">Current: @_selectedComparisonDate</span>
        </div>

        <!-- Comparison Cards Row 2 - Sales Data -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <!-- Today's Sales vs Comparison -->
            <div class="card @Helpers.GetSalesBackgroundClass(todaysSales)">
                <div class="card-body">
                    <h3 class="text-lg font-semibold mb-4 @Helpers.GetSalesTextClass(todaysSales)">Today's Sales</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <p class="text-sm @Helpers.GetSalesTextClass(todaysSales, 0.7) uppercase font-medium">Today</p>
                            <p class="text-2xl font-bold @Helpers.GetSalesTextClass(todaysSales)">@((todaysSales?.TodaysSalesValue ?? 0).ToString("C"))</p>
                            <p class="text-sm @Helpers.GetSalesTextClass(todaysSales, 0.7)">@(todaysSales?.TodaysSalesCount ?? 0) transactions</p>
                        </div>
                        <div>
                            <p class="text-sm @Helpers.GetSalesTextClass(todaysSales, 0.7) uppercase font-medium">@Helpers.GetComparisonLabel(comparisonDates, _selectedComparisonDate)</p>
                            <p class="text-2xl font-bold @Helpers.GetSalesTextClass(todaysSales)">@((todaysSales?.ComparisonSalesValue ?? 0).ToString("C"))</p>
                            <p class="text-sm @Helpers.GetSalesTextClass(todaysSales, 0.7)">@(todaysSales?.ComparisonSalesCount ?? 0) transactions</p>
                        </div>
                    </div>
                    <div class="mt-4 pt-4 border-t @Helpers.GetSalesBorderClass(todaysSales)">
                        <div class="flex items-center justify-between">
                            <span class="text-sm @Helpers.GetSalesTextClass(todaysSales, 0.7) font-medium">Variance:</span>
                            <span class="text-lg font-bold @Helpers.GetSalesTextClass(todaysSales)">@Helpers.GetSalesVarianceDisplay(todaysSales)</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Today's Failed Sales vs Comparison -->
            <div class="card @Helpers.GetFailedSalesBackgroundClass(todaysFailedSales)">
                <div class="card-body">
                    <h3 class="text-lg font-semibold mb-4 @Helpers.GetFailedSalesTextClass(todaysFailedSales)">Failed Sales (Low Credit)</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <p class="text-sm @Helpers.GetFailedSalesTextClass(todaysFailedSales, 0.7) uppercase font-medium">Today</p>
                            <p class="text-2xl font-bold @Helpers.GetFailedSalesTextClass(todaysFailedSales)">@((todaysFailedSales?.TodaysSalesValue ?? 0).ToString("C"))</p>
                            <p class="text-sm @Helpers.GetFailedSalesTextClass(todaysFailedSales,0.7)">@(todaysFailedSales?.TodaysSalesCount ?? 0) transactions</p>
                        </div>
                        <div>
                            <p class="text-sm @Helpers.GetFailedSalesTextClass(todaysFailedSales, 0.7) uppercase font-medium">@Helpers.GetComparisonLabel(comparisonDates, _selectedComparisonDate)</p>
                            <p class="text-2xl font-bold @Helpers.GetFailedSalesTextClass(todaysFailedSales)">@((todaysFailedSales?.ComparisonSalesValue ?? 0).ToString("C"))</p>
                            <p class="text-sm @Helpers.GetFailedSalesTextClass(todaysFailedSales, 0.7)">@(todaysFailedSales?.ComparisonSalesCount ?? 0) transactions</p>
                        </div>
                    </div>
                    <div class="mt-4 pt-4 border-t @Helpers.GetFailedSalesBorderClass(todaysFailedSales)">
                        <div class="flex items-center justify-between">
                            <span class="text-sm @Helpers.GetFailedSalesTextClass(todaysFailedSales, 0.7) font-medium">Variance:</span>
                            <span class="text-lg font-bold @Helpers.GetFailedSalesTextClass(todaysFailedSales)">@Helpers.GetFailedSalesVarianceDisplay(todaysFailedSales)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recently Created Merchants -->
        @if (recentMerchants != null && recentMerchants.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Recently Created Merchants</h3>
                </div>
                <div class="card-body">
                    <div class="space-y-3">
                        @foreach (var merchant in recentMerchants)
                        {
                            <div class="flex items-center justify-between p-3 bg-gray-50 rounded hover:bg-gray-100 transition-colors">
                                <div class="flex items-center">
                                    <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center mr-3">
                                        <svg class="w-5 h-5 text-admin-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="text-gray-900 font-medium">@merchant.Name (@merchant.Reference)</p>
                                        <p class="text-sm text-gray-500">@merchant.CreatedDateTime.ToString("dd/MM/yyyy HH:mm")</p>
                                    </div>
                                </div>
                                <a href="/merchants/@merchant.MerchantId" class="btn btn-sm btn-primary">View</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>