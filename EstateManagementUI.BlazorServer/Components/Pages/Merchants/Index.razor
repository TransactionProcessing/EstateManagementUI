@page "/merchants"
@using EstateManagementUI.BlazorServer.Factories
@rendermode InteractiveServer
@using EstateManagementUI.BlazorServer.Permissions
@using EstateManagementUI.BusinessLogic.Requests
@inject IMediator Mediator
@inherits AuthorizedComponentBase
@inject NavigationManager NavigationManager
@inject IPermissionKeyProvider PermissionKeyProvider

<PageTitle>Merchant Management</PageTitle>

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-900">Merchant Management</h1>
        <RequirePermission Section="@PermissionSection.Merchant" Function="@PermissionFunction.Create" @key="@($"create-merchant-{PermissionKeyProvider.GetKey()}")">
            <button id="newMerchantButton" class="btn btn-primary" @onclick="NavigateToNewMerchant">
                <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Add New Merchant
            </button>
        </RequirePermission>
    </div>

    @if (isLoading)
    {
        <div class="flex items-center justify-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
        </div>
    }
    else if (allMerchants != null && allMerchants.Any())
    {
        <!-- Filters Card -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Filters</h3>
            </div>
            <div class="card-body">
                <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Name</label>
                        <input type="text" @bind="filterName" @bind:event="oninput" placeholder="Filter by name..." class="form-control" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Reference</label>
                        <input type="text" @bind="filterReference" @bind:event="oninput" placeholder="Filter by reference..." class="form-control" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Settlement Schedule</label>
                        <select @bind="filterSettlementSchedule" class="form-control">
                            <option value="">All</option>
                            <option value="Immediate">Immediate</option>
                            <option value="Weekly">Weekly</option>
                            <option value="Monthly">Monthly</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Region</label>
                        <input type="text" @bind="filterRegion" @bind:event="oninput" placeholder="Filter by region..." class="form-control" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Postcode</label>
                        <input type="text" @bind="filterPostcode" @bind:event="oninput" placeholder="Filter by postcode..." class="form-control" />
                    </div>
                </div>
                <div class="mt-4">
                    <button @onclick="ClearFilters" class="btn btn-secondary">
                        Clear Filters
                    </button>
                </div>
            </div>
        </div>

        <!-- Merchants Table -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <table id="merchantList" class="table">
                <thead>
                    <tr>
                        <th>Merchant Name</th>
                        <th>Reference</th>
                        <th>Region</th>
                        <th>Postcode</th>
                        <th>Balance</th>
                        <th>Available Balance</th>
                        <th>Settlement Schedule</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var merchant in pagedMerchants)
                    {
                        <tr class="hover:bg-gray-50 cursor-pointer" @onclick="() => ViewMerchant(merchant.MerchantId)">
                            <td>
                                <div class="flex items-center">
                                    <div class="w-10 h-10 bg-blue-600 text-white rounded-full flex items-center justify-center mr-3">
                                        @merchant.MerchantName.Substring(0, 1).ToUpper()
                                    </div>
                                    <div>
                                        <p class="font-medium text-gray-900">@merchant.MerchantName</p>
                                    </div>
                                </div>
                            </td>
                            <td class="font-mono text-sm">@merchant.MerchantReference</td>
                            <td class="text-sm">@(merchant.Region ?? "N/A")</td>
                            <td class="font-mono text-sm">@(merchant.PostalCode ?? "N/A")</td>
                            <td class="font-semibold text-green-600">@(merchant.Balance?.ToString("C") ?? "N/A")</td>
                            <td class="font-semibold">@(merchant.AvailableBalance?.ToString("C") ?? "N/A")</td>
                            <td>
                                <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
                                    @(merchant.SettlementSchedule ?? "Not Set")
                                </span>
                            </td>
                            <td class="text-right">
                                <div class="flex items-center justify-end space-x-2">
                                    <button id="viewMerchantLink" class="text-blue-600 hover:text-blue-800 p-2" @onclick:stopPropagation="true" @onclick="() => ViewMerchant(merchant.MerchantId)" title="View">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                    </button>
                                    <RequirePermission Section="@PermissionSection.Merchant" Function="@PermissionFunction.Edit" @key="@($"edit-{merchant.MerchantId}-{PermissionKeyProvider.GetKey()}")">
                                        <button id="editMerchantLink" class="text-green-600 hover:text-green-800 p-2" @onclick:stopPropagation="true" @onclick="() => EditMerchant(merchant.MerchantId)" title="Edit">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                            </svg>
                                        </button>
                                    </RequirePermission>
                                    <RequirePermission Section="@PermissionSection.Merchant" Function="@PermissionFunction.MakeDeposit" @key="@($"deposit-{merchant.MerchantId}-{PermissionKeyProvider.GetKey()}")">
                                        <button id="makeDepositLink" class="text-purple-600 hover:text-purple-800 p-2" @onclick:stopPropagation="true" @onclick="() => MakeDeposit(merchant.MerchantId)" title="Make Deposit">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                        </button>
                                    </RequirePermission>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        @if (totalPages > 1)
        {
            <div class="flex items-center justify-between bg-white rounded-lg shadow-md p-4">
                <div class="text-sm text-gray-700">
                    Showing <span class="font-medium">@Math.Min((currentPage - 1) * pageSize + 1, filteredMerchants.Count)</span> to 
                    <span class="font-medium">@Math.Min(currentPage * pageSize, filteredMerchants.Count)</span> of 
                    <span class="font-medium">@filteredMerchants.Count</span> results
                </div>
                <div class="flex items-center space-x-2">
                    <button @onclick="FirstPage" disabled="@(currentPage == 1)" class="btn btn-secondary" title="First Page">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path>
                        </svg>
                    </button>
                    <button @onclick="PreviousPage" disabled="@(currentPage == 1)" class="btn btn-secondary" title="Previous Page">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </button>
                    <span class="text-sm text-gray-700">
                        Page <span class="font-medium">@currentPage</span> of <span class="font-medium">@totalPages</span>
                    </span>
                    <button @onclick="NextPage" disabled="@(currentPage >= totalPages)" class="btn btn-secondary" title="Next Page">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </button>
                    <button @onclick="LastPage" disabled="@(currentPage >= totalPages)" class="btn btn-secondary" title="Last Page">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
                        </svg>
                    </button>
                </div>
            </div>
        }

        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-white rounded-lg shadow-md p-6">
                <p class="text-sm text-gray-600 mb-1">Total Merchants</p>
                <p class="text-3xl font-bold text-gray-900">@filteredMerchants.Count</p>
            </div>
            <div class="bg-white rounded-lg shadow-md p-6">
                <p class="text-sm text-gray-600 mb-1">Total Balance</p>
                <p class="text-3xl font-bold text-green-600">@filteredMerchants.Sum(m => m.Balance ?? 0).ToString("C")</p>
            </div>
            <div class="bg-white rounded-lg shadow-md p-6">
                <p class="text-sm text-gray-600 mb-1">Available Balance</p>
                <p class="text-3xl font-bold text-blue-600">@filteredMerchants.Sum(m => m.AvailableBalance ?? 0).ToString("C")</p>
            </div>
        </div>
    }
    else
    {
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
            </svg>
            <p class="text-gray-600 mb-4">No merchants found.</p>
            <RequirePermission Section="@PermissionSection.Merchant" Function="@PermissionFunction.Create">
                <button class="btn btn-primary" @onclick="NavigateToNewMerchant">Add Your First Merchant</button>
            </RequirePermission>
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private List<MerchantModel>? allMerchants;
    
    // Filter fields
    private string filterName = "";
    private string filterReference = "";
    private string filterSettlementSchedule = "";
    private string filterRegion = "";
    private string filterPostcode = "";
    
    // Pagination fields
    private int currentPage = 1;
    private int pageSize = 10;
    
    private List<MerchantModel> filteredMerchants => GetFilteredMerchants();
    private List<MerchantModel> pagedMerchants => GetPagedMerchants();
    private int totalPages => (int)Math.Ceiling(filteredMerchants.Count / (double)pageSize);

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await RequirePermission(PermissionSection.Merchant, PermissionFunction.List);

            var correlationId = new CorrelationId(Guid.NewGuid());
            var estateId = Guid.Parse("11111111-1111-1111-1111-111111111111");

            var result = await Mediator.Send(new Queries.GetMerchantsQuery(correlationId, estateId));
            if (result.IsSuccess)
            {
                allMerchants = ModelFactory.ConvertFrom(result.Data);
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private List<MerchantModel> GetFilteredMerchants()
    {
        if (allMerchants == null)
            return new List<MerchantModel>();
            
        var filtered = allMerchants.AsEnumerable();
        
        if (!string.IsNullOrWhiteSpace(filterName))
        {
            filtered = filtered.Where(m => m.MerchantName?.Contains(filterName, StringComparison.OrdinalIgnoreCase) ?? false);
        }
        
        if (!string.IsNullOrWhiteSpace(filterReference))
        {
            filtered = filtered.Where(m => m.MerchantReference?.Contains(filterReference, StringComparison.OrdinalIgnoreCase) ?? false);
        }
        
        if (!string.IsNullOrWhiteSpace(filterSettlementSchedule))
        {
            filtered = filtered.Where(m => m.SettlementSchedule?.Equals(filterSettlementSchedule, StringComparison.OrdinalIgnoreCase) ?? false);
        }
        
        if (!string.IsNullOrWhiteSpace(filterRegion))
        {
            filtered = filtered.Where(m => m.Region?.Contains(filterRegion, StringComparison.OrdinalIgnoreCase) ?? false);
        }
        
        if (!string.IsNullOrWhiteSpace(filterPostcode))
        {
            filtered = filtered.Where(m => m.PostalCode?.Contains(filterPostcode, StringComparison.OrdinalIgnoreCase) ?? false);
        }
        
        return filtered.ToList();
    }
    
    private List<MerchantModel> GetPagedMerchants()
    {
        var filtered = filteredMerchants;
        return filtered.Skip((currentPage - 1) * pageSize).Take(pageSize).ToList();
    }
    
    private void ClearFilters()
    {
        filterName = "";
        filterReference = "";
        filterSettlementSchedule = "";
        filterRegion = "";
        filterPostcode = "";
        currentPage = 1;
    }
    
    private void FirstPage()
    {
        currentPage = 1;
    }
    
    private void PreviousPage()
    {
        if (currentPage > 1)
            currentPage--;
    }
    
    private void NextPage()
    {
        if (currentPage < totalPages)
            currentPage++;
    }
    
    private void LastPage()
    {
        currentPage = totalPages;
    }

    private void ViewMerchant(Guid merchantId)
    {
        NavigationManager.NavigateTo($"/merchants/{merchantId}");
    }

    private void EditMerchant(Guid merchantId)
    {
        NavigationManager.NavigateTo($"/merchants/{merchantId}/edit");
    }

    private void MakeDeposit(Guid merchantId)
    {
        NavigationManager.NavigateTo($"/merchants/{merchantId}/deposit");
    }

    private void NavigateToNewMerchant()
    {
        NavigationManager.NavigateTo("/merchants/new");
    }
}
