@page "/merchants/{MerchantId:guid}"
@using EstateManagementUI.BlazorServer.Factories
@rendermode InteractiveServer
@inject IMediator Mediator
@inherits  AuthorizedComponentBase
@inject NavigationManager NavigationManager
@using EstateManagementUI.BlazorServer.Models
@using EstateManagementUI.BusinessLogic.Requests

<PageTitle>View Merchant</PageTitle>

<div class="space-y-6">
    @if (isLoading)
    {
        <div class="flex items-center justify-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
        </div>
    }
    else if (merchant != null)
    {
        <!-- Page Header -->
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">View Merchant: @merchant.MerchantName</h1>
                <p class="text-gray-600 mt-1">Reference: @merchant.MerchantReference</p>
            </div>
            <div class="flex space-x-2">
                <button class="btn btn-secondary" @onclick="BackToList">
                    Back to List
                </button>
            </div>
        </div>

        <!-- Tabs -->
        <div class="bg-white rounded-lg shadow-md">
            <div class="border-b border-gray-200">
                <nav class="flex -mb-px">
                    <button @onclick='() => activeTab = "details"' class="@GetTabClass("details")">
                        Merchant Details
                    </button>
                    <button @onclick='() => activeTab = "address"' class="@GetTabClass("address")">
                        Address Details
                    </button>
                    <button @onclick='() => activeTab = "contact"' class="@GetTabClass("contact")">
                        Contact Details
                    </button>
                    <button @onclick='() => activeTab = "operators"' class="@GetTabClass("operators")">
                        Assigned Operators
                    </button>
                    <button @onclick='() => activeTab = "contracts"' class="@GetTabClass("contracts")">
                        Assigned Contracts
                    </button>
                    <button @onclick='() => activeTab = "devices"' class="@GetTabClass("devices")">
                        Assigned Devices
                    </button>
                    <button @onclick='() => activeTab = "transactions"' class="@GetTabClass("transactions")">
                        Transaction History
                    </button>
                    <button @onclick="OnSettlementsTabClick" class="@GetTabClass("settlements")">
                        Settlement History
                    </button>
                </nav>
            </div>

            <div class="p-6">
                @if (activeTab == "details")
                {
                    <div class="space-y-4">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Merchant Name</label>
                                <p class="text-gray-900 font-medium">@merchant.MerchantName</p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Merchant Reference</label>
                                <p class="text-gray-900 font-mono">@merchant.MerchantReference</p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Settlement Schedule</label>
                                <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
                                    @(merchant.SettlementSchedule ?? "Not Set")
                                </span>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Balance</label>
                                <p class="text-2xl font-bold text-green-600">@(merchant.Balance?.ToString("C") ?? "N/A")</p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Available Balance</label>
                                <p class="text-2xl font-bold text-blue-600">@(merchant.AvailableBalance?.ToString("C") ?? "N/A")</p>
                            </div>
                        </div>
                    </div>
                }
                else if (activeTab == "address")
                {
                    <div class="space-y-4">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Address Line 1</label>
                                <p class="text-gray-900">@(merchant.AddressLine1 ?? "Not set")</p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Address Line 2</label>
                                <p class="text-gray-900">@(string.IsNullOrEmpty(merchant.AddressLine2) ? "Not set" : merchant.AddressLine2)</p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Town</label>
                                <p class="text-gray-900">@(merchant.Town ?? "Not set")</p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Region</label>
                                <p class="text-gray-900">@(merchant.Region ?? "Not set")</p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">PostCode</label>
                                <p class="text-gray-900">@(merchant.PostalCode ?? "Not set")</p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Country</label>
                                <p class="text-gray-900">@(merchant.Country ?? "Not set")</p>
                            </div>
                        </div>
                    </div>
                }
                else if (activeTab == "contact")
                {
                    <div class="space-y-4">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Contact Name</label>
                                <p class="text-gray-900">@(merchant.ContactName ?? "Not set")</p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                                <p class="text-gray-900">@(merchant.ContactEmailAddress ?? "Not set")</p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                                <p class="text-gray-900">@(merchant.ContactPhoneNumber ?? "Not set")</p>
                            </div>
                        </div>
                    </div>
                }
                else if (activeTab == "operators")
                {
                    <div class="space-y-4">
                        <h3 class="text-lg font-semibold mb-4">Assigned Operators</h3>
                        @if (assignedOperators == null || !assignedOperators.Any())
                        {
                            <p class="text-gray-500 text-center py-8">No operators assigned</p>
                        }
                        else
                        {
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                @foreach (var op in assignedOperators)
                                {
                                    <div class="p-4 bg-gray-50 rounded-lg">
                                        <p class="font-medium text-gray-900">@op.OperatorName</p>
                                        <div class="mt-2 space-y-1">
                                            <p class="text-sm text-gray-600">
                                                Merchant Number: @(String.IsNullOrEmpty(op.MerchantNumber) ? "N/A" : op.MerchantNumber)
                                            </p>
                                            <p class="text-sm text-gray-600">
                                                Custom Terminal Number: @(String.IsNullOrEmpty(op.TerminalNumber) ? "N/A" : op.TerminalNumber)
                                            </p>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else if (activeTab == "contracts")
                {
                    <div class="space-y-4">
                        <h3 class="text-lg font-semibold mb-4">Assigned Contracts</h3>
                        @if (assignedContracts == null || !assignedContracts.Any())
                        {
                            <p class="text-gray-500 text-center py-8">No contracts assigned</p>
                        }
                        else
                        {
                            <div class="space-y-3">
                                @foreach (var contract in assignedContracts)
                                {
                                    <div class="p-4 bg-gray-50 rounded-lg">
                                        <p class="font-medium text-gray-900">@contract.ContractName</p>
                                        <p class="text-sm text-gray-600 mt-1">Operator: @contract.OperatorName</p>
                                        @if (contract.ContractProducts != null && contract.ContractProducts.Any())
                                        {
                                            <div class="mt-3">
                                                <p class="text-sm font-medium text-gray-700">Products:</p>
                                                <ul class="mt-1 space-y-1">
                                                    @foreach (var product in contract.ContractProducts)
                                                    {
                                                        <li class="text-sm text-gray-600">â€¢ @product.ProductName (@product.DisplayText)</li>
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else if (activeTab == "devices")
                {
                    <div class="space-y-4">
                        <h3 class="text-lg font-semibold mb-4">Assigned Devices</h3>
                        @if (assignedDevices == null || !assignedDevices.Any())
                        {
                            <p class="text-gray-500 text-center py-8">No devices assigned</p>
                        }
                        else
                        {
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                                @foreach (var device in assignedDevices)
                                {
                                    <div class="p-3 bg-gray-50 rounded-lg">
                                        <p class="font-mono text-gray-900">@device</p>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else if (activeTab == "transactions")
                {
                    <div class="space-y-4">
                        <h3 class="text-lg font-semibold mb-4">Transaction History</h3>
                        <p class="text-gray-500 text-center py-8">Transaction history will be displayed here</p>
                    </div>
                }
                else if (activeTab == "settlements")
                {
                    <div class="space-y-4">
                        <h3 class="text-lg font-semibold mb-4">Settlement History</h3>
                        
                        @if (loadingSettlementTransactions)
                        {
                            <div class="flex items-center justify-center py-8">
                                <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
                            </div>
                        }
                        else if (settlementTransactions != null && settlementTransactions.Any())
                        {
                            <div class="mb-4 grid grid-cols-1 md:grid-cols-3 gap-4">
                                <div class="p-4 bg-blue-50 rounded-lg">
                                    <p class="text-sm text-blue-600">Total Transactions</p>
                                    <p class="text-2xl font-bold text-blue-900">@settlementTransactions.Count.ToString("N0")</p>
                                </div>
                                <div class="p-4 bg-green-50 rounded-lg">
                                    <p class="text-sm text-green-600">Settled Transactions</p>
                                    <p class="text-2xl font-bold text-green-900">@settlementTransactions.Count(t => !string.IsNullOrEmpty(t.SettlementReference)).ToString("N0")</p>
                                </div>
                                <div class="p-4 bg-purple-50 rounded-lg">
                                    <p class="text-sm text-purple-600">Total Amount</p>
                                    <p class="text-2xl font-bold text-purple-900">@settlementTransactions.Sum(t => t.GrossAmount).ToString("C")</p>
                                </div>
                            </div>
                            
                            <div class="overflow-x-auto">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Transaction Date Time</th>
                                            <th class="px-3 py-3 text-right text-xs font-medium text-gray-500 uppercase">Amount</th>
                                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Result</th>
                                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Response Code</th>
                                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Operator</th>
                                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
                                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Settlement Status</th>
                                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Settlement Date Time</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200">
                                        @foreach (var transaction in GetPagedSettlementTransactions())
                                        {
                                            <tr class="hover:bg-gray-50">
                                                <td class="px-3 py-3 text-sm text-gray-900">@transaction.TransactionDateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                                <td class="px-3 py-3 text-sm text-gray-900 text-right font-semibold">@transaction.GrossAmount.ToString("C")</td>
                                                <td class="px-3 py-3 text-sm">
                                                    <span class="@GetResultBadgeClass(transaction.TransactionStatus)">
                                                        @GetResultText(transaction.TransactionStatus)
                                                    </span>
                                                </td>
                                                <td class="px-3 py-3 text-sm font-mono text-gray-900">@(transaction.ResponseCode ?? "-")</td>
                                                <td class="px-3 py-3 text-sm text-gray-900">@transaction.OperatorName</td>
                                                <td class="px-3 py-3 text-sm text-gray-900">@transaction.ProductName</td>
                                                <td class="px-3 py-3 text-sm">
                                                    <span class="@GetSettlementStatusBadgeClass(transaction.SettlementReference)">
                                                        @GetSettlementStatusText(transaction.SettlementReference)
                                                    </span>
                                                </td>
                                                <td class="px-3 py-3 text-sm text-gray-900">
                                                    @(transaction.SettlementDateTime.HasValue 
                                                        ? transaction.SettlementDateTime.Value.ToString("yyyy-MM-dd HH:mm:ss") 
                                                        : "-")
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            
                            @if (settlementTotalPages > 1)
                            {
                                <div class="mt-4 flex items-center justify-between border-t pt-4">
                                    <div class="flex items-center gap-2">
                                        <label class="text-sm text-gray-700">Rows per page:</label>
                                        <select @bind="settlementPageSize" @bind:after="() => { settlementCurrentPage = 1; }" class="form-control w-20">
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>
                                    </div>
                                    
                                    <div class="flex items-center gap-2">
                                        <button @onclick="SettlementPreviousPage" disabled="@(settlementCurrentPage == 1)" class="btn btn-sm btn-secondary" title="Previous page">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                                            </svg>
                                        </button>
                                        
                                        <span class="text-sm text-gray-700">
                                            Page @settlementCurrentPage of @settlementTotalPages
                                        </span>
                                        
                                        <button @onclick="SettlementNextPage" disabled="@(settlementCurrentPage == settlementTotalPages)" class="btn btn-sm btn-secondary" title="Next page">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-gray-500 text-center py-8">No settlement history available</p>
                        }
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
            <p class="text-gray-600">Merchant not found</p>
            <button class="btn btn-primary mt-4" @onclick="BackToList">Back to List</button>
        </div>
    }
</div>