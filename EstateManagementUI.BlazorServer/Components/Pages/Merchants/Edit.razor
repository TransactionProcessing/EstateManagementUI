@page "/merchants/{MerchantId:guid}/edit"
@using System.ComponentModel.DataAnnotations
@inject IMediator Mediator
@inject NavigationManager NavigationManager

<PageTitle>Edit Merchant</PageTitle>

<div class="space-y-6">
    @if (isLoading)
    {
        <div class="flex items-center justify-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
        </div>
    }
    else if (merchant != null)
    {
        <!-- Page Header -->
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Edit Merchant: @merchant.MerchantName</h1>
                <p class="text-gray-600 mt-1">Reference: @merchant.MerchantReference</p>
            </div>
            <div class="flex space-x-2">
                <button class="btn btn-secondary" @onclick="ViewMerchant">
                    View Only
                </button>
                <button class="btn btn-secondary" @onclick="BackToList">
                    Back to List
                </button>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(successMessage))
        {
            <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg">
                <p class="font-medium">Success</p>
                <p class="text-sm">@successMessage</p>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(errorMessage))
        {
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
                <p class="font-medium">Error</p>
                <p class="text-sm">@errorMessage</p>
            </div>
        }

        <!-- Tabs -->
        <div class="bg-white rounded-lg shadow-md">
            <div class="border-b border-gray-200">
                <nav class="flex -mb-px">
                    <button @onclick="() => SetActiveTab(\"details\")" class="@GetTabClass("details")">
                        Merchant Details
                    </button>
                    <button @onclick="() => SetActiveTab(\"address\")" class="@GetTabClass("address")">
                        Address Details
                    </button>
                    <button @onclick="() => SetActiveTab(\"contact\")" class="@GetTabClass("contact")">
                        Contact Details
                    </button>
                    <button @onclick="() => SetActiveTab(\"operators\")" class="@GetTabClass("operators")">
                        Assigned Operators
                    </button>
                    <button @onclick="() => SetActiveTab(\"contracts\")" class="@GetTabClass("contracts")">
                        Assigned Contracts
                    </button>
                    <button @onclick="() => SetActiveTab(\"devices\")" class="@GetTabClass("devices")">
                        Assigned Devices
                    </button>
                    <button @onclick="() => SetActiveTab(\"transactions\")" class="@GetTabClass("transactions")">
                        Transaction History
                    </button>
                </nav>
            </div>

            <div class="p-6">
                @if (activeTab == "details")
                {
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Merchant Name</label>
                            <input type="text" value="@merchant.MerchantName" class="input w-full" disabled />
                            <p class="text-sm text-gray-500 mt-1">Merchant name cannot be changed after creation</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Settlement Schedule</label>
                            <div class="flex items-center space-x-4">
                                <select @bind="settlementSchedule" class="input w-full md:w-64">
                                    <option value="Immediate">Immediate</option>
                                    <option value="Weekly">Weekly</option>
                                    <option value="Monthly">Monthly</option>
                                </select>
                                <button @onclick="UpdateSettlementSchedule" class="btn btn-primary" disabled="@isSaving">
                                    Update Schedule
                                </button>
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Balance</label>
                            <p class="text-2xl font-bold text-green-600">@(merchant.Balance?.ToString("C") ?? "N/A")</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Available Balance</label>
                            <p class="text-2xl font-bold text-blue-600">@(merchant.AvailableBalance?.ToString("C") ?? "N/A")</p>
                        </div>
                    </div>
                }
                else if (activeTab == "address")
                {
                    <EditForm Model="@addressModel" OnValidSubmit="@UpdateAddress">
                        <DataAnnotationsValidator />
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                    Address Line 1 <span class="text-red-500">*</span>
                                </label>
                                <InputText @bind-Value="addressModel.AddressLine1" class="input w-full" />
                                <ValidationMessage For="@(() => addressModel.AddressLine1)" class="text-red-600 text-sm mt-1" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Address Line 2</label>
                                <InputText @bind-Value="addressModel.AddressLine2" class="input w-full" />
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Town <span class="text-red-500">*</span>
                                    </label>
                                    <InputText @bind-Value="addressModel.Town" class="input w-full" />
                                    <ValidationMessage For="@(() => addressModel.Town)" class="text-red-600 text-sm mt-1" />
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Region <span class="text-red-500">*</span>
                                    </label>
                                    <InputText @bind-Value="addressModel.Region" class="input w-full" />
                                    <ValidationMessage For="@(() => addressModel.Region)" class="text-red-600 text-sm mt-1" />
                                </div>
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        PostCode <span class="text-red-500">*</span>
                                    </label>
                                    <InputText @bind-Value="addressModel.PostalCode" class="input w-full" />
                                    <ValidationMessage For="@(() => addressModel.PostalCode)" class="text-red-600 text-sm mt-1" />
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Country <span class="text-red-500">*</span>
                                    </label>
                                    <InputText @bind-Value="addressModel.Country" class="input w-full" />
                                    <ValidationMessage For="@(() => addressModel.Country)" class="text-red-600 text-sm mt-1" />
                                </div>
                            </div>
                            <div class="flex justify-end pt-4">
                                <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span>Saving...</span>
                                    }
                                    else
                                    {
                                        <span>Update Address</span>
                                    }
                                </button>
                            </div>
                        </div>
                    </EditForm>
                }
                else if (activeTab == "contact")
                {
                    <EditForm Model="@contactModel" OnValidSubmit="@UpdateContact">
                        <DataAnnotationsValidator />
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                    Contact Name <span class="text-red-500">*</span>
                                </label>
                                <InputText @bind-Value="contactModel.ContactName" class="input w-full" />
                                <ValidationMessage For="@(() => contactModel.ContactName)" class="text-red-600 text-sm mt-1" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                    Email Address <span class="text-red-500">*</span>
                                </label>
                                <InputText @bind-Value="contactModel.ContactEmailAddress" type="email" class="input w-full" />
                                <ValidationMessage For="@(() => contactModel.ContactEmailAddress)" class="text-red-600 text-sm mt-1" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                    Phone Number <span class="text-red-500">*</span>
                                </label>
                                <InputText @bind-Value="contactModel.ContactPhoneNumber" type="tel" class="input w-full" />
                                <ValidationMessage For="@(() => contactModel.ContactPhoneNumber)" class="text-red-600 text-sm mt-1" />
                            </div>
                            <div class="flex justify-end pt-4">
                                <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span>Saving...</span>
                                    }
                                    else
                                    {
                                        <span>Update Contact</span>
                                    }
                                </button>
                            </div>
                        </div>
                    </EditForm>
                }
                else if (activeTab == "operators")
                {
                    <div class="space-y-4">
                        <div class="flex justify-between items-center mb-4">
                            <h3 class="text-lg font-semibold">Assigned Operators</h3>
                            <button @onclick="() => showAddOperator = !showAddOperator" class="btn btn-primary">
                                @(showAddOperator ? "Cancel" : "Add Operator")
                            </button>
                        </div>

                        @if (showAddOperator)
                        {
                            <div class="bg-gray-50 p-4 rounded-lg mb-4">
                                <label class="block text-sm font-medium text-gray-700 mb-2">Select Operator</label>
                                <div class="flex space-x-2">
                                    <select @bind="selectedOperatorId" class="input flex-1">
                                        <option value="">Select an operator...</option>
                                        @if (availableOperators != null)
                                        {
                                            @foreach (var op in availableOperators)
                                            {
                                                <option value="@op.OperatorId">@op.Name</option>
                                            }
                                        }
                                    </select>
                                    <button @onclick="AddOperatorToMerchant" class="btn btn-primary" disabled="@(string.IsNullOrEmpty(selectedOperatorId))">
                                        Add
                                    </button>
                                </div>
                            </div>
                        }

                        @if (assignedOperators == null || !assignedOperators.Any())
                        {
                            <p class="text-gray-500 text-center py-8">No operators assigned</p>
                        }
                        else
                        {
                            <div class="space-y-2">
                                @foreach (var op in assignedOperators)
                                {
                                    <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                        <span class="font-medium">@op.Name</span>
                                        <button @onclick="() => RemoveOperatorFromMerchant(op.OperatorId)" class="text-red-600 hover:text-red-800">
                                            Remove
                                        </button>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else if (activeTab == "contracts")
                {
                    <div class="space-y-4">
                        <div class="flex justify-between items-center mb-4">
                            <h3 class="text-lg font-semibold">Assigned Contracts</h3>
                            <button @onclick="() => showAddContract = !showAddContract" class="btn btn-primary">
                                @(showAddContract ? "Cancel" : "Assign Contract")
                            </button>
                        </div>

                        @if (showAddContract)
                        {
                            <div class="bg-gray-50 p-4 rounded-lg mb-4">
                                <label class="block text-sm font-medium text-gray-700 mb-2">Select Contract</label>
                                <div class="flex space-x-2">
                                    <select @bind="selectedContractId" class="input flex-1">
                                        <option value="">Select a contract...</option>
                                        @if (availableContracts != null)
                                        {
                                            @foreach (var contract in availableContracts)
                                            {
                                                <option value="@contract.ContractId">@contract.Description (@contract.OperatorName)</option>
                                            }
                                        }
                                    </select>
                                    <button @onclick="AssignContractToMerchant" class="btn btn-primary" disabled="@(string.IsNullOrEmpty(selectedContractId))">
                                        Assign
                                    </button>
                                </div>
                            </div>
                        }

                        @if (assignedContracts == null || !assignedContracts.Any())
                        {
                            <p class="text-gray-500 text-center py-8">No contracts assigned</p>
                        }
                        else
                        {
                            <div class="space-y-2">
                                @foreach (var contract in assignedContracts)
                                {
                                    <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                        <div>
                                            <p class="font-medium">@contract.Description</p>
                                            <p class="text-sm text-gray-600">Operator: @contract.OperatorName</p>
                                        </div>
                                        <button @onclick="() => RemoveContractFromMerchant(contract.ContractId)" class="text-red-600 hover:text-red-800">
                                            Remove
                                        </button>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else if (activeTab == "devices")
                {
                    <div class="space-y-4">
                        <div class="flex justify-between items-center mb-4">
                            <h3 class="text-lg font-semibold">Assigned Devices</h3>
                            <button @onclick="() => showAddDevice = !showAddDevice" class="btn btn-primary">
                                @(showAddDevice ? "Cancel" : "Add Device")
                            </button>
                        </div>

                        @if (showAddDevice)
                        {
                            <div class="bg-gray-50 p-4 rounded-lg mb-4">
                                <label class="block text-sm font-medium text-gray-700 mb-2">Device Identifier</label>
                                <div class="flex space-x-2">
                                    <input @bind="deviceIdentifier" type="text" class="input flex-1" placeholder="Enter device identifier" />
                                    <button @onclick="AddDeviceToMerchant" class="btn btn-primary" disabled="@(string.IsNullOrEmpty(deviceIdentifier))">
                                        Add
                                    </button>
                                </div>
                            </div>
                        }

                        @if (assignedDevices == null || !assignedDevices.Any())
                        {
                            <p class="text-gray-500 text-center py-8">No devices assigned</p>
                        }
                        else
                        {
                            <div class="space-y-2">
                                @foreach (var device in assignedDevices)
                                {
                                    <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                        <span class="font-mono">@device</span>
                                        <button @onclick="() => RemoveDevice(device)" class="text-red-600 hover:text-red-800">
                                            Remove
                                        </button>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else if (activeTab == "transactions")
                {
                    <div class="space-y-4">
                        <h3 class="text-lg font-semibold mb-4">Transaction History</h3>
                        <p class="text-gray-500 text-center py-8">Transaction history will be displayed here</p>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
            <p class="text-gray-600">Merchant not found</p>
            <button class="btn btn-primary mt-4" @onclick="BackToList">Back to List</button>
        </div>
    }
</div>

@code {
    [Parameter]
    public Guid MerchantId { get; set; }

    private MerchantModel? merchant;
    private bool isLoading = true;
    private bool isSaving = false;
    private string? errorMessage;
    private string? successMessage;
    private string activeTab = "details";

    // Models for editing
    private AddressModel addressModel = new();
    private ContactModel contactModel = new();
    private string settlementSchedule = "";

    // Operators
    private List<OperatorModel>? availableOperators;
    private List<OperatorModel> assignedOperators = new();
    private bool showAddOperator = false;
    private string? selectedOperatorId;

    // Contracts
    private List<ContractModel>? availableContracts;
    private List<ContractModel> assignedContracts = new();
    private bool showAddContract = false;
    private string? selectedContractId;

    // Devices
    private List<string> assignedDevices = new();
    private bool showAddDevice = false;
    private string? deviceIdentifier;

    protected override async Task OnInitializedAsync()
    {
        await LoadMerchant();
        await LoadOperators();
        await LoadContracts();
    }

    private async Task LoadMerchant()
    {
        try
        {
            isLoading = true;
            var correlationId = new CorrelationId(Guid.NewGuid());
            var estateId = Guid.Parse("11111111-1111-1111-1111-111111111111");
            var accessToken = "stubbed-token";

            var result = await Mediator.Send(new Queries.GetMerchantQuery(correlationId, accessToken, estateId, MerchantId));
            
            if (result.IsSuccess && result.Data != null)
            {
                merchant = result.Data;
                
                // Initialize models with current values
                addressModel = new AddressModel
                {
                    AddressLine1 = merchant.AddressLine1,
                    AddressLine2 = merchant.AddressLine1,
                    Town = merchant.Town,
                    Region = merchant.Region,
                    PostalCode = merchant.PostalCode,
                    Country = merchant.Country
                };

                contactModel = new ContactModel
                {
                    ContactName = merchant.ContactName,
                    ContactEmailAddress = merchant.ContactEmailAddress,
                    ContactPhoneNumber = merchant.ContactPhoneNumber
                };

                settlementSchedule = merchant.SettlementSchedule ?? "Immediate";

                // Mock some assigned data
                assignedOperators = new List<OperatorModel>
                {
                    new OperatorModel { OperatorId = Guid.NewGuid(), Name = "Safaricom" }
                };

                assignedContracts = new List<ContractModel>
                {
                    new ContractModel { ContractId = Guid.NewGuid(), Description = "Standard Transaction Contract", OperatorName = "Safaricom" }
                };

                assignedDevices = new List<string> { "DEVICE001", "DEVICE002" };
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadOperators()
    {
        try
        {
            var correlationId = new CorrelationId(Guid.NewGuid());
            var estateId = Guid.Parse("11111111-1111-1111-1111-111111111111");
            var accessToken = "stubbed-token";

            var result = await Mediator.Send(new Queries.GetOperatorsQuery(correlationId, accessToken, estateId));
            
            if (result.IsSuccess)
            {
                availableOperators = result.Data;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading operators: {ex.Message}");
        }
    }

    private async Task LoadContracts()
    {
        try
        {
            var correlationId = new CorrelationId(Guid.NewGuid());
            var estateId = Guid.Parse("11111111-1111-1111-1111-111111111111");
            var accessToken = "stubbed-token";

            var result = await Mediator.Send(new Queries.GetContractsQuery(correlationId, accessToken, estateId));
            
            if (result.IsSuccess)
            {
                availableContracts = result.Data;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading contracts: {ex.Message}");
        }
    }

    private void SetActiveTab(string tab)
    {
        activeTab = tab;
        ClearMessages();
    }

    private string GetTabClass(string tab)
    {
        var baseClass = "px-6 py-3 text-sm font-medium border-b-2 transition-colors ";
        return tab == activeTab
            ? baseClass + "border-blue-600 text-blue-600"
            : baseClass + "border-transparent text-gray-600 hover:text-gray-800 hover:border-gray-300";
    }

    private async Task UpdateAddress()
    {
        isSaving = true;
        ClearMessages();

        try
        {
            var correlationId = new CorrelationId(Guid.NewGuid());
            var estateId = Guid.Parse("11111111-1111-1111-1111-111111111111");
            var accessToken = "stubbed-token";

            var command = new Commands.UpdateMerchantAddressCommand(
                correlationId,
                accessToken,
                estateId,
                MerchantId,
                addressModel.AddressLine1!,
                addressModel.Town!,
                addressModel.Region!,
                addressModel.PostalCode!,
                addressModel.Country!
            );

            var result = await Mediator.Send(command);

            if (result.IsSuccess)
            {
                successMessage = "Address updated successfully";
                await LoadMerchant();
            }
            else
            {
                errorMessage = result.Message ?? "Failed to update address";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task UpdateContact()
    {
        isSaving = true;
        ClearMessages();

        try
        {
            var correlationId = new CorrelationId(Guid.NewGuid());
            var estateId = Guid.Parse("11111111-1111-1111-1111-111111111111");
            var accessToken = "stubbed-token";

            var command = new Commands.UpdateMerchantContactCommand(
                correlationId,
                accessToken,
                estateId,
                MerchantId,
                contactModel.ContactName!,
                contactModel.ContactEmailAddress!,
                contactModel.ContactPhoneNumber!
            );

            var result = await Mediator.Send(command);

            if (result.IsSuccess)
            {
                successMessage = "Contact details updated successfully";
                await LoadMerchant();
            }
            else
            {
                errorMessage = result.Message ?? "Failed to update contact details";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task UpdateSettlementSchedule()
    {
        isSaving = true;
        ClearMessages();

        try
        {
            var correlationId = new CorrelationId(Guid.NewGuid());
            var estateId = Guid.Parse("11111111-1111-1111-1111-111111111111");
            var accessToken = "stubbed-token";

            var command = new Commands.SetMerchantSettlementScheduleCommand(
                correlationId,
                accessToken,
                estateId,
                MerchantId,
                settlementSchedule
            );

            var result = await Mediator.Send(command);

            if (result.IsSuccess)
            {
                successMessage = "Settlement schedule updated successfully";
                await LoadMerchant();
            }
            else
            {
                errorMessage = result.Message ?? "Failed to update settlement schedule";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task AddOperatorToMerchant()
    {
        if (string.IsNullOrEmpty(selectedOperatorId)) return;

        ClearMessages();

        try
        {
            var correlationId = new CorrelationId(Guid.NewGuid());
            var estateId = Guid.Parse("11111111-1111-1111-1111-111111111111");
            var accessToken = "stubbed-token";
            var operatorId = Guid.Parse(selectedOperatorId);

            var command = new Commands.AddOperatorToMerchantCommand(
                correlationId,
                accessToken,
                estateId,
                MerchantId,
                operatorId
            );

            var result = await Mediator.Send(command);

            if (result.IsSuccess)
            {
                successMessage = "Operator added successfully";
                selectedOperatorId = null;
                showAddOperator = false;
                
                // Add to assigned list (in real implementation, reload from server)
                var op = availableOperators?.FirstOrDefault(o => o.OperatorId == operatorId);
                if (op != null && !assignedOperators.Any(a => a.OperatorId == operatorId))
                {
                    assignedOperators.Add(op);
                }
            }
            else
            {
                errorMessage = result.Message ?? "Failed to add operator";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
    }

    private async Task RemoveOperatorFromMerchant(Guid operatorId)
    {
        ClearMessages();

        try
        {
            var correlationId = new CorrelationId(Guid.NewGuid());
            var estateId = Guid.Parse("11111111-1111-1111-1111-111111111111");
            var accessToken = "stubbed-token";

            var command = new Commands.RemoveOperatorFromMerchantCommand(
                correlationId,
                accessToken,
                estateId,
                MerchantId,
                operatorId
            );

            var result = await Mediator.Send(command);

            if (result.IsSuccess)
            {
                successMessage = "Operator removed successfully";
                assignedOperators.RemoveAll(o => o.OperatorId == operatorId);
            }
            else
            {
                errorMessage = result.Message ?? "Failed to remove operator";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
    }

    private async Task AssignContractToMerchant()
    {
        if (string.IsNullOrEmpty(selectedContractId)) return;

        ClearMessages();

        try
        {
            var correlationId = new CorrelationId(Guid.NewGuid());
            var estateId = Guid.Parse("11111111-1111-1111-1111-111111111111");
            var accessToken = "stubbed-token";
            var contractId = Guid.Parse(selectedContractId);

            var command = new Commands.AssignContractToMerchantCommand(
                correlationId,
                accessToken,
                estateId,
                MerchantId,
                contractId
            );

            var result = await Mediator.Send(command);

            if (result.IsSuccess)
            {
                successMessage = "Contract assigned successfully";
                selectedContractId = null;
                showAddContract = false;
                
                // Add to assigned list (in real implementation, reload from server)
                var contract = availableContracts?.FirstOrDefault(c => c.ContractId == contractId);
                if (contract != null && !assignedContracts.Any(a => a.ContractId == contractId))
                {
                    assignedContracts.Add(contract);
                }
            }
            else
            {
                errorMessage = result.Message ?? "Failed to assign contract";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
    }

