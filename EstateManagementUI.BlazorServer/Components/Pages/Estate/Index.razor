@page "/estate"
@inject IMediator Mediator

<PageTitle>Estate Management</PageTitle>

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-900">Estate Management</h1>
    </div>

    @if (isLoading)
    {
        <div class="flex items-center justify-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
        </div>
    }
    else if (estate != null)
    {
        <!-- Estate Details Card -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div>
                    <label class="label">Estate Name</label>
                    <input id="Estate_Name" type="text" value="@estate.EstateName" readonly class="input-field text-lg font-semibold text-gray-900 bg-gray-50" />
                </div>
                <div>
                    <label class="label">Estate ID</label>
                    <p class="text-sm text-gray-600 font-mono">@estate.EstateId</p>
                </div>
                <div>
                    <label class="label">Reference</label>
                    <input id="Estate_Reference" type="text" value="@estate.Reference" readonly class="input-field text-sm text-gray-600 bg-gray-50" />
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-600 mb-1">Total Merchants</p>
                        <p class="text-3xl font-bold text-gray-900">@(merchants?.Count ?? 0)</p>
                    </div>
                    <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-600 mb-1">Total Operators</p>
                        <p class="text-3xl font-bold text-gray-900">@(operators?.Count ?? 0)</p>
                    </div>
                    <svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                    </svg>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-600 mb-1">Total Contracts</p>
                        <p class="text-3xl font-bold text-gray-900">@(contracts?.Count ?? 0)</p>
                    </div>
                    <svg class="w-12 h-12 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-600 mb-1">Total Users</p>
                        <p class="text-3xl font-bold text-gray-900">5</p>
                    </div>
                    <svg class="w-12 h-12 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Management Sections -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Merchants Section -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-lg font-semibold text-gray-900">Recent Merchants</h2>
                    <a href="/merchants" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View All →</a>
                </div>
                @if (merchants != null && merchants.Any())
                {
                    <div class="space-y-3">
                        @foreach (var merchant in merchants.Take(5))
                        {
                            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                <div>
                                    <p class="font-medium text-gray-900">@merchant.MerchantName</p>
                                    <p class="text-sm text-gray-600">@merchant.MerchantReference</p>
                                </div>
                                <a href="/merchants/@merchant.MerchantId" class="text-blue-600 hover:text-blue-800">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-gray-600">No merchants found.</p>
                }
            </div>

            <!-- Operators Section -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-lg font-semibold text-gray-900">Operators</h2>
                    <a href="/operators" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View All →</a>
                </div>
                @if (operators != null && operators.Any())
                {
                    <div class="space-y-3">
                        @foreach (var op in operators)
                        {
                            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                <div>
                                    <p class="font-medium text-gray-900">@op.Name</p>
                                    <p class="text-sm text-gray-600">
                                        @(op.RequireCustomMerchantNumber ? "Custom Merchant Number" : "")
                                        @(op.RequireCustomTerminalNumber ? "Custom Terminal Number" : "")
                                    </p>
                                </div>
                                <a href="/operators/@op.OperatorId" class="text-blue-600 hover:text-blue-800">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-gray-600">No operators found.</p>
                }
            </div>
        </div>
    }
    else
    {
        <div class="bg-white rounded-lg shadow-md p-6">
            <p class="text-gray-600">Unable to load estate information.</p>
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private EstateModel? estate;
    private List<MerchantModel>? merchants;
    private List<OperatorModel>? operators;
    private List<ContractModel>? contracts;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Use stubbed mediator to get data
            var correlationId = new CorrelationId(Guid.NewGuid());
            var estateId = Guid.Parse("11111111-1111-1111-1111-111111111111");
            var accessToken = "stubbed-token";

            var estateResult = await Mediator.Send(new Queries.GetEstateQuery(correlationId, accessToken, estateId));
            if (estateResult.IsSuccess)
            {
                estate = estateResult.Data;
            }

            var merchantsResult = await Mediator.Send(new Queries.GetMerchantsQuery(correlationId, accessToken, estateId));
            if (merchantsResult.IsSuccess)
            {
                merchants = merchantsResult.Data;
            }

            var operatorsResult = await Mediator.Send(new Queries.GetOperatorsQuery(correlationId, accessToken, estateId));
            if (operatorsResult.IsSuccess)
            {
                operators = operatorsResult.Data;
            }

            var contractsResult = await Mediator.Send(new Queries.GetContractsQuery(correlationId, accessToken, estateId));
            if (contractsResult.IsSuccess)
            {
                contracts = contractsResult.Data;
            }
        }
        finally
        {
            isLoading = false;
        }
    }
}
