@page "/file-processing"
@inject IMediator Mediator
@inject NavigationManager NavigationManager

<PageTitle>File Processing</PageTitle>

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-900">File Processing</h1>
        <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/file-processing/upload")'>
            <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            Upload File
        </button>
    </div>

    @if (isLoading)
    {
        <div class="flex items-center justify-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
        </div>
    }
    else if (fileImportLogs != null && fileImportLogs.Any())
    {
        <!-- File Import Logs Table -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <table class="table">
                <thead>
                    <tr>
                        <th>Import Date</th>
                        <th>Upload Date</th>
                        <th>File Count</th>
                        <th>Status</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in fileImportLogs)
                    {
                        <tr class="hover:bg-gray-50 cursor-pointer" @onclick='() => NavigationManager.NavigateTo($"/file-processing/{log.FileImportLogId}")'>
                            <td class="font-medium">@log.ImportLogDateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>@log.FileUploadedDateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>
                                <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
                                    @log.FileCount file(s)
                                </span>
                            </td>
                            <td>
                                <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">
                                    Processed
                                </span>
                            </td>
                            <td class="text-right">
                                <button class="text-blue-600 hover:text-blue-800 p-2" @onclick:stopPropagation="true" @onclick='() => NavigationManager.NavigateTo($"/file-processing/{log.FileImportLogId}")' title="View Details">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-600 mb-1">Total Import Logs</p>
                        <p class="text-3xl font-bold text-gray-900">@fileImportLogs.Count</p>
                    </div>
                    <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                    </svg>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-600 mb-1">Total Files</p>
                        <p class="text-3xl font-bold text-gray-900">@fileImportLogs.Sum(f => f.FileCount)</p>
                    </div>
                    <svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-600 mb-1">Success Rate</p>
                        <p class="text-3xl font-bold text-green-600">100%</p>
                    </div>
                    <svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
            <p class="text-gray-600 mb-4">No file import logs found.</p>
            <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/file-processing/upload")'>Upload Your First File</button>
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private List<FileImportLogModel>? fileImportLogs;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var correlationId = new CorrelationId(Guid.NewGuid());
            var estateId = Guid.Parse("11111111-1111-1111-1111-111111111111");
            var merchantId = Guid.Parse("22222222-2222-2222-2222-222222222222");
            var accessToken = "stubbed-token";

            var result = await Mediator.Send(new Queries.GetFileImportLogsListQuery(
                correlationId,
                accessToken,
                estateId,
                merchantId,
                DateTime.Now.AddMonths(-1),
                DateTime.Now
            ));

            if (result.IsSuccess)
            {
                fileImportLogs = result.Data;
            }
        }
        finally
        {
            isLoading = false;
        }
    }
}
