@page "/contracts"
@inject IMediator Mediator
@inject NavigationManager NavigationManager

<PageTitle>Contract Management</PageTitle>

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-900">Contract Management</h1>
        <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/contracts/new")'>
            <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add New Contract
        </button>
    </div>

    @if (isLoading)
    {
        <div class="flex items-center justify-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
        </div>
    }
    else if (contracts != null && contracts.Any())
    {
        <!-- Contracts Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var contract in contracts)
            {
                <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow cursor-pointer" @onclick='() => NavigationManager.NavigateTo($"/contracts/{contract.ContractId}")'>
                    <div class="flex items-start justify-between mb-4">
                        <div class="w-12 h-12 bg-purple-600 text-white rounded-lg flex items-center justify-center">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                        </div>
                        <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-xs font-medium">Active</span>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">@contract.Description</h3>
                    <p class="text-sm text-gray-600 mb-4">
                        <span class="font-medium">Operator:</span> @contract.OperatorName
                    </p>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600">
                            @(contract.Products?.Count ?? 0) Product(s)
                        </span>
                        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <p class="text-gray-600 mb-4">No contracts found.</p>
            <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo("/contracts/new")'>Add Your First Contract</button>
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private List<ContractModel>? contracts;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var correlationId = new CorrelationId(Guid.NewGuid());
            var estateId = Guid.Parse("11111111-1111-1111-1111-111111111111");
            var accessToken = "stubbed-token";

            var result = await Mediator.Send(new Queries.GetContractsQuery(correlationId, accessToken, estateId));
            if (result.IsSuccess)
            {
                contracts = result.Data;
            }
        }
        finally
        {
            isLoading = false;
        }
    }
}
