@page "/permissions-debug"
@using EstateManagementUI.BlazorServer.Permissions
@using Microsoft.AspNetCore.Components.Authorization
@inject IPermissionService PermissionService
@inject AuthenticationStateProvider AuthStateProvider
@inject IPermissionStore PermissionStore

<PageTitle>Permission Diagnostics</PageTitle>

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Permission System Diagnostics</h1>
    
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
            </div>
            <div class="ml-3">
                <p class="text-sm text-yellow-700">
                    This is a diagnostic page to help debug permission issues. Use the role switcher in the header to change roles and see how permissions update.
                </p>
            </div>
        </div>
    </div>

    @if (_loading)
    {
        <div class="text-center py-8">
            <p class="text-gray-600">Loading diagnostic information...</p>
        </div>
    }
    else
    {
        <!-- Authentication State -->
        <div class="bg-white shadow rounded-lg p-6 mb-6">
            <h2 class="text-xl font-semibold mb-4">Authentication State</h2>
            <div class="space-y-2">
                <p><span class="font-medium">Is Authenticated:</span> <span class="@(_isAuthenticated ? "text-green-600" : "text-red-600")">@_isAuthenticated</span></p>
                <p><span class="font-medium">User Name:</span> @_userName</p>
                <p><span class="font-medium">User Email:</span> @_userEmail</p>
                <p><span class="font-medium">Current Role:</span> <span class="text-blue-600 font-semibold">@_currentRole</span></p>
            </div>
        </div>

        <!-- User Permissions -->
        <div class="bg-white shadow rounded-lg p-6 mb-6">
            <h2 class="text-xl font-semibold mb-4">Current User Permissions</h2>
            <p class="mb-4"><span class="font-medium">Total Permissions:</span> @_userPermissions.Count</p>
            
            @if (_userPermissions.Any())
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Section</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Function</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var permission in _userPermissions.OrderBy(p => p.Section).ThenBy(p => p.Function))
                            {
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@permission.Section</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@permission.Function</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-red-600">⚠️ No permissions found for current role!</p>
            }
        </div>

        <!-- Permission Check Tests -->
        <div class="bg-white shadow rounded-lg p-6 mb-6">
            <h2 class="text-xl font-semibold mb-4">Permission Check Tests</h2>
            <p class="text-sm text-gray-600 mb-4">Testing specific permission combinations:</p>
            
            <div class="space-y-3">
                @foreach (var test in _permissionTests)
                {
                    <div class="flex items-center p-3 border rounded @(test.HasPermission ? "bg-green-50 border-green-200" : "bg-red-50 border-red-200")">
                        <span class="text-2xl mr-3">@(test.HasPermission ? "✅" : "❌")</span>
                        <div>
                            <p class="font-medium">@test.Section - @test.Function</p>
                            <p class="text-sm text-gray-600">Result: @(test.HasPermission ? "Allowed" : "Denied")</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- All System Roles -->
        <div class="bg-white shadow rounded-lg p-6">
            <h2 class="text-xl font-semibold mb-4">All System Roles</h2>
            <div class="space-y-4">
                @foreach (var role in _allRoles)
                {
                    <div class="border rounded p-4 @(role.Name == _currentRole ? "border-blue-500 bg-blue-50" : "border-gray-200")">
                        <h3 class="font-semibold text-lg mb-2">
                            @role.Name 
                            @if (role.Name == _currentRole)
                            {
                                <span class="text-sm text-blue-600">(Current)</span>
                            }
                        </h3>
                        <p class="text-sm text-gray-600 mb-2">Permissions: @role.Permissions.Count</p>
                        <details>
                            <summary class="cursor-pointer text-blue-600 text-sm">Show all permissions</summary>
                            <div class="mt-2 pl-4">
                                @foreach (var perm in role.Permissions.OrderBy(p => p.Section).ThenBy(p => p.Function))
                                {
                                    <p class="text-xs text-gray-600">• @perm.Section - @perm.Function</p>
                                }
                            </div>
                        </details>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private bool _loading = true;
    private bool _isAuthenticated;
    private string _userName = "";
    private string _userEmail = "";
    private string _currentRole = "";
    private List<Permission> _userPermissions = new();
    private List<Role> _allRoles = new();
    private List<PermissionTest> _permissionTests = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDiagnosticDataAsync();
    }

    private async Task LoadDiagnosticDataAsync()
    {
        _loading = true;
        
        try
        {
            // Get authentication state
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            
            _isAuthenticated = user?.Identity?.IsAuthenticated ?? false;
            _userName = user?.Identity?.Name ?? "Unknown";
            _userEmail = user?.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "Unknown";
            
            // Get current role
            _currentRole = await PermissionService.GetUserRoleAsync() ?? "None";
            
            // Get user permissions
            _userPermissions = await PermissionService.GetUserPermissionsAsync();
            
            // Get all roles
            _allRoles = await PermissionStore.GetAllRolesAsync();
            
            // Run permission tests
            _permissionTests = new List<PermissionTest>
            {
                new() { Section = PermissionSection.Merchant, Function = PermissionFunction.View, 
                    HasPermission = await PermissionService.HasPermissionAsync(PermissionSection.Merchant, PermissionFunction.View) },
                new() { Section = PermissionSection.Merchant, Function = PermissionFunction.Edit, 
                    HasPermission = await PermissionService.HasPermissionAsync(PermissionSection.Merchant, PermissionFunction.Edit) },
                new() { Section = PermissionSection.Merchant, Function = PermissionFunction.Create, 
                    HasPermission = await PermissionService.HasPermissionAsync(PermissionSection.Merchant, PermissionFunction.Create) },
                new() { Section = PermissionSection.Merchant, Function = PermissionFunction.Delete, 
                    HasPermission = await PermissionService.HasPermissionAsync(PermissionSection.Merchant, PermissionFunction.Delete) },
                new() { Section = PermissionSection.Merchant, Function = PermissionFunction.MakeDeposit, 
                    HasPermission = await PermissionService.HasPermissionAsync(PermissionSection.Merchant, PermissionFunction.MakeDeposit) },
                new() { Section = PermissionSection.Operator, Function = PermissionFunction.Edit, 
                    HasPermission = await PermissionService.HasPermissionAsync(PermissionSection.Operator, PermissionFunction.Edit) },
                new() { Section = PermissionSection.Contract, Function = PermissionFunction.Edit, 
                    HasPermission = await PermissionService.HasPermissionAsync(PermissionSection.Contract, PermissionFunction.Edit) },
                new() { Section = PermissionSection.Dashboard, Function = PermissionFunction.View, 
                    HasPermission = await PermissionService.HasPermissionAsync(PermissionSection.Dashboard, PermissionFunction.View) },
            };
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading diagnostic data: {ex.Message}");
        }
        finally
        {
            _loading = false;
        }
    }

    private class PermissionTest
    {
        public PermissionSection Section { get; set; }
        public PermissionFunction Function { get; set; }
        public bool HasPermission { get; set; }
    }
}
